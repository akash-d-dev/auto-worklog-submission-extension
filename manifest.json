{
  "manifest_version": 3,
  "name": "Auto Worklog Submitter",
  "version": "1.0",
  "description": "Automatically captures auth token and allows users to submit worklogs daily.",
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.kalvium.community/*",
    "https://app.kalvium.community/*",
    "http://localhost:3000/*",
    "https://auto-worklog-submission.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto Worklog Config",
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.kalvium.community/*"],
      "js": ["content.js"]
    }
  ]
}

