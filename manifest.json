{
  "manifest_version": 3,
  "name": "Auto Worklog Submitter",
  "version": "2.0",
  "description": "Automatically captures auth tokens and allows users to submit worklogs daily.",
  "icons": {
    "16": "auto-worklog.png",
    "32": "auto-worklog.png",
    "48": "auto-worklog.png",
    "128": "auto-worklog.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webRequest"
  ],
  "host_permissions": [
    "https://*.kalvium.community/*",
    "https://auth.kalvium.community/*",
    "http://localhost:3000/*",
    "https://auto-worklog-submission.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto Worklog Config",
    "default_icon": {
      "16": "auto-worklog.png",
      "32": "auto-worklog.png",
      "48": "auto-worklog.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://kalvium.community/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://kalvium.community/*"
      ],
      "js": [
        "content-bridge.js"
      ],
      "run_at": "document_start"
    }
  ]
}